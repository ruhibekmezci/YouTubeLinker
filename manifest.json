{
  "manifest_version": 3,
  "name": "YouTube Başlık ve Süre Kopyala",
  "version": "1.7",
  "description": "YouTube videolarından link kopyalar, ekran görüntüsü alır, QR kod oluşturur ve zaman damgalı notlar ekler.",
  "permissions": [
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://www.youtube.com/shorts/*",
        "https://youtube.com/watch*",
        "https://youtube.com/shorts/*",
        "https://m.youtube.com/watch*",
        "https://m.youtube.com/shorts/*"
      ],
      "js": [
        "qrcode.min.js", 
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}